{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "paths": {
    "@additional-css-attributes-for-html-elements/core": ["./packages/core/index.ts"],
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}